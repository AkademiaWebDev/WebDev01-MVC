@model webdev.Models.Book
<div>
    <table>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => Model.Title):</strong></td>
            <td>@Html.DisplayFor(model => Model.Title),</td>
            <td><strong>@Html.DisplayNameFor(model => Model.Author):</strong></td>
            <td>@Html.DisplayFor(model => Model.Author)</td>
        </tr>
    </table>
</div>

<div>
    @using (Html.BeginForm("Update", "Book", FormMethod.Post))
    {
        <input type="text" name="Author" placeholder="Author"/> <br/>
        <input type="text" name="Title" placeholder="Title"/> <br/>
        @Html.HiddenFor(model => Model.Id)
        <button type="submit">Add</button>
    }
</div>
     